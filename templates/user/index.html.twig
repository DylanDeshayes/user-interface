{% extends 'base.html.twig' %}

{% block title %}Bonjour {{app.user.firstname}}{% endblock %}

{% block body %}
    <h1>Bonjour {{ app.user.firstname }}</h1>

    <h2>Que souhaites-tu faire ? </h2>
    <a href="{{path('app_register')}}" class="btn btn-secondary">Modifier mon profil</a>
    {% if is_granted('ROLE_ADMIN') %}<a href="{{path('admin')}}" class="btn btn-primary">Gérer les utilisateurs</a>{% endif %}
    <a href="{{path('app_logout')}}" class="btn btn-warning">Me déconnecter</a>
{% endblock %}
